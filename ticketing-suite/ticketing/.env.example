# Backend Environment Variables Example
# Copy this file to .env and update with your actual values

# ============================================================
# REQUIRED - Database Configuration
# ============================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/tickets"

# ============================================================
# REQUIRED - Authentication
# ============================================================
JWT_SECRET="your-secret-key-change-this-in-production"

# ============================================================
# REQUIRED - Cache
# ============================================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
# Optional: REDIS_PASSWORD=""

# ============================================================
# OPTIONAL - Server Configuration
# ============================================================
PORT="3000"
NODE_ENV="development"

# ============================================================
# OPTIONAL - OIDC (Production Only)
# ============================================================
# Uncomment and configure for production OIDC authentication
# OIDC_ISSUER="https://your-oidc-provider.com"
# OIDC_AUDIENCE="your-api-audience"
# TENANT_CLAIM="tid"
# ROLE_CLAIM="roles"

# ============================================================
# OPTIONAL - AWS S3 (For Attachments)
# ============================================================
# Uncomment if using S3 for attachment storage
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# S3_BUCKET="your-bucket-name"

# ============================================================
# OPTIONAL - OpenSearch (For Full-Text Search)
# ============================================================
# Uncomment if using OpenSearch
# OPENSEARCH_NODE="http://localhost:9200"
# OPENSEARCH_USERNAME="admin"
# OPENSEARCH_PASSWORD="admin"

# ============================================================
# OPTIONAL - CORS Configuration (Production)
# ============================================================
# Uncomment and set to your frontend URL in production
# FRONTEND_URL="https://dashboard.example.com"

# ============================================================
# OPTIONAL - Observability
# ============================================================
# OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
# OTEL_SERVICE_NAME="ticketing-api"
